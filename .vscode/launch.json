{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Fibenv QA file (remote, HC3 access)", // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "${config:fibpython}",
        //"communication": "pipe"
      },
      "cwd": "${workspaceFolder}",
      "args": [
        ".vscode/emufiles/__init__.py",
        "-f",
        "${relativeFile}" //"${file}",
      ],
      //"scriptRoots": ["${workspaceFolder}"], // Required for debugger to find scripts
      //"scriptFiles": ["*.lua", "**/*.lua"],
      "stepUnmappedLines": false,
      "ignorePatterns": [
        "emufiles",
        "lldebugger"
      ] // Add to skip the emufiles and focus on QA
    },
    {
      "name": "Fibenv QA file (local, no HC3 access)", // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "${config:fibpython}",
        //"communication": "pipe"
      },
      "cwd": "${workspaceFolder}",
      "args": [
        ".vscode/emufiles/__init__.py",
        "-l",
        //"-i","dev/init.lua"
        "-f",
        "${relativeFile}" //"${file}"
      ],
      //"scriptRoots": ["${workspaceFolder}"], // Required for debugger to find scripts
      //"scriptFiles": ["*.lua", "**/*.lua"],
      "stepUnmappedLines": false,
      "ignorePatterns": [
        "emufiles",
        "lldebugger"
      ] // Add to not step into emufiles and only focus on QA code
    },
    {
      "name": "Fibenv QA file emu files (remote, HC3 access)", // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "${config:fibpython}",
        //"communication": "pipe"
      },
      "cwd": "${workspaceFolder}",
      "args": [
        ".vscode/emufiles/__init__.py",
        "-f",
        "${relativeFile}" //"${file}"
      ],
      "scriptRoots": [
        "${workspaceFolder}"
      ], // Required for debugger to find scripts
      "scriptFiles": [
        "*.lua",
        "**/*.lua"
      ],
      "stepUnmappedLines": false,
      //"ignorePatterns": ["^emufiles","lldebugger"] // Add to skip the emufiles and focus on QA
      "ignorePatterns": [
        "lldebugger"
      ]
    },
    {
      "name": "Fibenv QA file emu files (local, no HC3 access)", // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "${config:fibpython}",
        //"communication": "pipe"
      },
      "cwd": "${workspaceFolder}",
      "args": [
        ".vscode/emufiles/__init__.py",
        "-l",
        //"-i","dev/init.lua"
        "-f",
        "${relativeFile}" //"${file}"
      ],
      "scriptRoots": [
        "${workspaceFolder}"
      ], // Required for debugger to find scripts
      "scriptFiles": [
        "*.lua",
        "**/*.lua"
      ],
      "stepUnmappedLines": false,
      //"ignorePatterns": ["^emufiles","lldebugger"] // Add to not step into emufiles and only focus on QA code
      "ignorePatterns": [
        "lldebugger"
      ]
    },
    {
      "name": "Python: __init__.py (debug, remote)", // For debugging the python wrapper
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/emufiles/__init__.py",
      "args": [
        "-f",
        "${file}"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        //  "GEVENT_SUPPORT": "True"
      }
    },
    {
      "name": "Python: __init__.py (debug, local)", // For debugging the python wrapper
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/emufiles/__init__.py",
      "args": [
        "-l",
        "-f",
        "C:/Users/vermi/source/repos/fibaro/quickApp/Nest/main.lua" //"${file}"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        //  "GEVENT_SUPPORT": "True"
      }
    },
    {
      "name": "Debug Lua file", // For debugging the lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "lua": "lua",
        "file": "${file}"
      },
      "breakInCoroutines": true,
      "ignorePatterns": [
        "^copas"
      ]
    },
    {
      "name": "Debug task", // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "${config:fibpython}",
      },
      "cwd": "${workspaceFolder}",
      "args": [
        ".vscode/emufiles/__init__.py",
        "-nw",
        "-l",
        "-ng",
        "-i",
        "${workspaceFolder}/.vscode/emufiles/lua/tool.lua",
        "-extra",
        "${file}",
        "qa",
        "upload",
        "${file}",
        "dev"
      ],
    },
  ]
}